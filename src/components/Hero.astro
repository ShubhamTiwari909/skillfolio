---
import PurpleScribble from "../assets/purple-scribble.svg";
import DownArrow from "../assets/down-arrow.svg";
import HeroBg from "../assets/hero-bg.webp";
import { BoxReveal } from "../components/magicui/box-reveal";
import { Image } from "astro:assets";
---

<section
    class="w-full flex items-center justify-center min-h-screen overflow-hidden bg-gradient-to-b from-slate-900 to-indigo-900 relative"
>
    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 text-center text-white">
        <p class="text-center text-4xl font-bold tracking-tight sm:text-3xl md:text-4xl lg:text-5xl mb-10 bg-clip-text bg-gradient-to-r from-purple-600 via-indigo-50 to-blue-800 text-transparent">
            Hi, I'm Shubham
        </p>
        <h1
            class="mb-8 text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl lg:text-7xl"
            style="line-height: 1.2"
        >
            <span
                class="relative whitespace-nowrap text-purple-400 dark:text-purple-400"
            >
                <PurpleScribble />
                <span class="relative">Crafted</span>
            </span>
            by Skill.<span
                class="relative whitespace-nowrap text-purple-400 dark:text-purple-400"
            >
                <PurpleScribble />
                <span class="relative">Defined</span>
            </span> by Depth
        </h1>
        <div class="flex justify-center w-full mb-6">
            <BoxReveal client:load boxColor="#312c85" duration={0.5}>
                <p class="mx-auto mb-8 max-w-2xl text-lg text-slate-200">
                    Welcome to my Skillfolio â€” a focused showcase of the tools,
                    technologies, and techniques I&rsquo;ve mastered. Dive into
                    detailed breakdowns of my expertise, real-world use cases,
                    and the problem-solving mindset behind each skill.
                </p>
            </BoxReveal>
        </div>
         <a href="https://dynamic-portfolio-black.vercel.app/shubham-v1" target="_blank" rel="noopener noreferrer" class="inline-block px-10 py-3 overflow-hidden text-sm font-semibold transition-all rounded-full group text text-indigo-200 bg-indigo-800 hover:bg-indigo-800 hover:outline hover:outline-indigo-200 hover:outline-offset-4 hover:text-white hover:-translate-y-1">
            Portfolio
        </a>
    </div>

    <!-- Scroll Down Icon -->
    <div
        class="absolute -bottom-5 lg:bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce"
    >
        <a href="#accordion" class="cursor-pointer">
           <DownArrow />
        </a>
    </div>
    <Image src={"https://www.answerconnect.com/assets/dest/images/desktop/_hero/learning-sharing@2x.jpg"} alt="Random Image" fit="cover" priority class="absolute inset-0 object-cover w-full h-full" quality="75" fetchpriority="high" sizes="100vw" inferSize loading="eager" />
    <div class="absolute inset-0 object-cover w-full h-full bg-slate-900/30"></div>
</section>
